// BLOCKS
@import '../assets/imports.styl'

/* eaea934657e00eabd6987472cc531cc4 */
.header-section-b
	height 87.5*gs
	background-color c-grey1
	position relative

	> .illustration-be
		background url('img/illustration.svg') repeat-x left bottom
		// background-size 100% auto
		opacity .1
		position absolute
		width 100%
		height 38*gs
		bottom gs
		left 0

	@media all and (max-width: 1024px)
		padding-top 15.5*gs - 2px
		height 75*gs
		> .illustration-be
			background-position: 52.5% bottom

		.text-e
			line-height 3.5*gs

	@media all and (max-width: 480px)
		height 60*gs

		> .illustration-be
			opacity .04


/* 1dc91129527aa66efd4713c1d468d5c5 */
.header-b
	height 11*gs
	padding 4*gs - 1px 4*gs
	max-width MAX_WIDTH
	.main-logo-e
		float left
	.header-menu-b
		margin-top (gs/2) + 2px
		float right

	@media all and (max-width: 1024px)
		padding 4*gs - 1px 6.5*gs 
		padding-left 6.5*gs - 1px
		.header-menu-b
			margin-top gs + 1px

	@media all and (max-width: 640px)
		padding 4*gs - 1px 5*gs 
		padding-left 5*gs - 1px
		.header-menu-b
			margin-top gs + 1px

		.is-fixed &
			.header-menu-b
				margin-top gs - 2px

	
	@media all and (max-width: 600px)
		padding 4*gs + 1px 0
		text-align center
		.main-logo-e
			margin 0 auto
			float none
		.header-menu-b
			float none
			display inline-block
			margin-top 4*gs + 2px

		.is-fixed &
			height 8*gs
			padding-top 2.5*gs
			.main-logo-e
				display none
			.header-menu-b
				margin-top gs - 2px





/* 9849287c7439916756b9941f934261ca */
.header-menu-b
	> .menu-item-be
		color c-grey3
		float left
		font-size 2*gs
		cursor pointer
		text-align left
		+ .menu-item-be
			margin-left 5*gs + 2px

		&.is-active
			cursor default
		&.is-active
			color white

		&:not(.is-active):hover
			color c-orange

	@media all and (max-width: 1024px)
		> .menu-item-be
			+ .menu-item-be
				margin-left 6*gs - 2px

	@media all and (max-width: 640px)
		> .menu-item-be
			+ .menu-item-be
				margin-left 6*gs - 2px

	@media all and (max-width: 480px)
		> .menu-item-be
			font-size 2*gs - 1px
			+ .menu-item-be
				margin-left 3.5*gs

	@media all and (max-width: 340px)
		> .menu-item-be
			+ .menu-item-be
				margin-left 2*gs + 2px

/* 008708f8432e188f18e65004a02d16b4 */
arrowSize = 2*gs - 1px
.popup-b
	background-color c-grey7
	position relative
	padding (5.5*gs - 1px) (6*gs + 1px)
	padding-bottom 6.5*gs - 2px
	width 100%

	/* f33cb11ebb4e14be67bf13e347804735 */
	&.is-right
		&:after
			left 100%
			margin-left - arrowSize - (19.5*gs)
		> .header-be
			color c-red

	/* c1cdef9219b8eecbff3ba94082863767 */
	&.is-center
		&:after
			left 50%
			margin-left - arrowSize
		> .header-be
			color c-blue
		

	&:after
		content ''
		position absolute
		top  - 2*arrowSize
		left 18*gs + 2px
		rect 0
		border arrowSize  solid transparent
		border-bottom-color c-grey7

	> .header-be
		color c-green
		font-size 4*gs - 2px
		font-weight bold
		padding-right 4*gs

	> .sub-header-be
		color #777
		font-size 2.5*gs
		margin-top 1.5*gs + 1px
		margin-bottom 4*gs + 1px
		line-height 3*gs
		margin-top gs + 3px
		margin-bottom 3*gs + 3px


	.text-e
		+ .text-e
			margin-top 3.5*gs - 2px

	.icon
		position absolute
		rect 2*gs
		top 6*gs + 1px
		right 6*gs + 3px

	.btn-b
		margin-top 2.5*gs - 2px

	.partners-l
		margin-top 2*gs + 1px
		margin-bottom 5*gs - 2px

	@media all and (max-width: 940px)
		width 80%
		margin-left 10%
		margin-top -5*gs
		
		&.is-right, &.is-center, &
			&:after
				left 50%
				margin-left - arrowSize

	@media all and (max-width: 590px)
		.partners-l
			margin-bottom 4*gs
			> div
				clear both
				margin-left 0


	@media all and (max-width: 480px)
		margin-top -5*gs
		> .header-be
			font-size 3.5*gs
		> .sub-header-be
			font-size 2.5*gs
		&.is-right, &.is-center, &
			&:after
				left 25%
				margin-left arrowSize


