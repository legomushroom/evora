/* cf55a2bffe4d9e493e0b5e911fec8ead */
.text-with-icon-b
	color c-grey5

	/* 88062218114eb6eb412f4d8502b5745e */
	&.is-grey
		color c-grey3
	
	/* 88062218114eb6eb412f4d8502b5745e */
	&.is-phone
