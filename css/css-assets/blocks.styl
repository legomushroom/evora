/* d92c18c2d4c55d4e89b0ea3a05cc57a1 */
.about-b
	padding-right 12*gs
	> .header-bl
		font-size 2.5*gs
		color 	#5c5b54
		> .num-ble
			color c-orange
			display inline
			padding-right gs - 2px
		> .text-ble
			display inline

	> .body-be
		font-size 2*gs
		line-height 3.5*gs
		color #777
		padding-left 3*gs
		margin-top 1.5*gs + 2px

	@media all and (max-width: 1024px)
		> .body-be
			margin-top 1.5*gs + 1px
			font-size 1.5*gs + 2px		
	
	@media all and (max-width: 480px)
		> .header-bl
			font-size 2*gs

		>  .body-be
			margin-top gs + 1px
			line-height 3.5*gs
			font-size 2*gs - 2px







/* 9849287c7439916756b9941f934261ca */
.service-b
	width 32*gs
	text-align center

	/* 3c2a2dac3b683df6f69990e68c1a176a */
	&.is-blue
		> .header-be
			color c-blue
			margin-top 4.5*gs
		> .text-be
			margin-top 2*gs

		.icon
			margin-top - (gs/2) - 1px
	
	/* 00565dba44670cc78cb77f00543d1128 */
	&.is-red
		> .header-be
			color c-red
			margin-top 4*gs - 1px
		> .text-be
			margin-top 2*gs 
			padding 0 2*gs

		.icon
			rect 11*gs - 1px
			margin-top - 3px

	> .header-be
		color c-green
		font-size 2*gs + 2px
		margin-top 4*gs - 1px
	> .text-be
		color #777777
		font-size 2*gs
		line-height 3*gs
		margin-top 2*gs
	.icon
		rect 10.5*gs
		margin 0 auto
	.btn-b
		margin-top 2.5*gs

	@media all and (max-width: 940px)
		text-align left
		overflow hidden

		> .text-be, > .header-be
			margin-left 15.5*gs

		> .header-be
			margin-top gs

		> .text-be
			margin-top gs - 1px

		.btn-b
			float left
			margin-top 1.5*gs
			margin-left 5*gs

		.icon
			float left
			text-align left
			margin-top 3*gs - 1px

		/* 3c2a2dac3b683df6f69990e68c1a176a */
		&.is-blue
			> .header-be, > .text-be
				margin-top 0

			> .text-be
				margin-top gs - 1px

			.icon
				margin-top 2*gs - 3px

		/* 00565dba44670cc78cb77f00543d1128 */
		&.is-red
			> .header-be, > .text-be
				margin-top 0
			> .text-be
				margin-top gs - 2px
				margin-left 13.5*gs 
			> .header-be
				margin-left 15*gs + 3px
			.btn-b
				margin-left 4.5*gs + 2px
				margin-top 2*gs - 3px
			.icon
				margin-top gs + 3px

	@media all and (max-width: 480px)
		&, &.is-red, &.is-blue
			.icon
				display none

			> .text-be, > .header-be, .btn-b
				margin-left 0
			
			> .header-be
				font-size 2*gs
			> .text-be
				font-size 2*gs - 2px
				padding-left 0
			.btn-b
				margin-top 2*gs - 3px
				margin-left 1px



