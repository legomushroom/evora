shadowSize = 2px
/* e8dcf44767bba63ed03de6691a1a44f7 */
.btn-b
	btnHeight = 4.5*gs
	background c-green
	height 		btnHeight
	line-height btnHeight + (gs/2)
	font-size 14px
	text-shadow 0 1px 1px rgba(0,0,0,.25)

	display: inline-block
	padding 0 (2.5*gs)
	color white
	cursor pointer

	&:hover
		background c-green-hover
	/* 23127e561ad37a9bbf9a5cd8c40a249d */
	&.is-red
		background-color c-red
		&:hover
			background c-red-hover
	/* 6dbc277a05dab2bf5c045642e9bef7c4 */
	&.is-blue
		background-color c-blue
		&:hover
			background c-blue-hover
	
	/* c94c6c09e07fccd716b5187285dc3ee8 */
	largeBtnHeight = btnHeight + gs + 2px
	&.is-large
		height largeBtnHeight
		line-height largeBtnHeight + (gs/2)
		font-size 2*gs + 2px
		padding 0 (3*gs + 3px)





